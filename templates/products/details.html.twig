{% extends 'base.html.twig' %}

{% block title %}Details of {{ product.name }}{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>{{ controller_name }} {{ product.name }} ! âœ…</h1>
        </div>
        <div class="col-6">
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">

                    {% for iteration in 1..product.images|length %}

                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1 }}" {{ (loop.first) ? 'class="active" aria-current="true"' : '' }} aria-label="Slide {{ iteration }}"></button>

                    {% endfor %}

                </div>
                <div class="carousel-inner">

                    {% for image in product.images %}

                    <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                        <img src="{{ asset('assets/uploads/') ~ image.name }}" class="d-block w-100" alt="{{ product.name }}">
                    </div>

                    <!--<pre>
                        {{dump(image)}}
                    </pre>-->
                    
                    {% endfor %}

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div> 

            <pre>
                {{ dump(product.images) }} 
            </pre>
            
        </div>
        <div class="col-6">
            <p>{{ product.description }}</p>
            <p>Price : {{ product.price / 100 }} $</p>
            <p>Category : {{ product.categories.name }}</p>
            {% if product.stock > 0 %}
            <a href="#" class="btn btn-success mb-4">Add to Wishlist</a>
            {% else %}
                <p class="text-danger">Coming Soon</p>
            {% endif %}
        </div>            
    </section>
</main>

{% endblock %}
