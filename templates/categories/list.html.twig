{% extends 'base.html.twig' %}

{% block title %}List of {{ category.name }}{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>List of {{ category.name }}</h1>
        </div>
        {% for product in products %}
        <div class="col-4 mb-4">
            <div class="card h-100" style="width: 25rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                  <h3 class="card-title">{{ product.name }}</h3> <!--injection du nom de notre categorie-->
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                  <a href="{{ path('products_details', { name: product.name }) }}" class="btn btn-primary">Know more...</a>
                </div>
              </div>
        </div>

        {% endfor %}
        
        <div class="col-12">
            {{ dump() }} <!--dump de la base de donnees sous la forme d'un ecran de controle des informations disponibles-->
        </div>
        
    </section>
</main>

{% endblock %}